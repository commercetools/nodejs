{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2019",
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
		"allowJs": false,
		"noEmit": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true
  },
  "exclude": ["**/node_modules", "**/dist"],
  "include": ["src"]
}
