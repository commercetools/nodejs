{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2019",
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
		"allowJs": false,
		"strict": true,
    "esModuleInterop": true,
		"isolatedModules": true
  },
  "exclude": ["**/node_modules", "**/dist"],
  "include": ["src"]
}
