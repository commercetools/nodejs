{
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "postinstall": "check-node-version --package && lerna bootstrap",
    "check-updates": "./scripts/check-updates",
    "clean": "rm -rf coverage && ./scripts/run-task clean",
    "build": "./scripts/run-task build",
    "task:build": "babel src --out-dir lib",
    "lint": "./scripts/lint packages",
    "test": "npm run build && lerna exec -- jest",
    "coverage": "npm run build && jest --no-watchman --coverage",
    "coverage:ci": "npm run coverage && codecov",
    "test:package": "npm run build && ./scripts/test-package",
    "release": "run-s -s release:*",
    "release:changelog": "lerna-semantic-release post && git add packages/*/CHANGELOG.md",
    "release:versioning": "lerna-semantic-release pre",
    "release:publish": "lerna-semantic-release perform"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "17.0.2",
    "babel-plugin-transform-export-extensions": "6.8.0",
    "babel-plugin-transform-object-rest-spread": "6.19.0",
    "babel-preset-es2015": "6.18.0",
    "chalk": "1.1.3",
    "check-node-version": "1.1.2",
    "codecov": "1.0.1",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "cz-lerna-changelog": "0.3.1",
    "eslint": "3.11.1",
    "eslint-config-airbnb": "13.0.0",
    "eslint-config-commercetools": "4.0.2",
    "eslint-formatter-pretty": "1.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.8.0",
    "ghooks": "1.3.2",
    "jest": "17.0.3",
    "lerna": "2.0.0-beta.30",
    "lerna-semantic-release": "^8.0.2",
    "npm-check-updates": "~2.8.8",
    "npm-run-all": "3.1.2",
    "validate-commit-msg": "2.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "./scripts/lint-staged-files"
    }
  },
  "eslintConfig": {
    "extends": "commercetools",
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/src/*.js"
          ]
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src/"
          ]
        }
      }
    }
  },
  "jest": {
    "globals": {
      "process.env": {
        "NODE_ENV": "test"
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/packages/.*/dist",
      "/packages/.*/lib"
    ]
  }
}
