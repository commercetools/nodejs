{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=6",
    "npm": ">=2"
  },
  "scripts": {
    "postinstall": "check-node-version --package --print && npm run bootstrap && cross-env NODE_ENV=development npm run build",
    "bootstrap": "lerna bootstrap",
    "check-updates": "./scripts/check-updates",
    "clean": "rm -rf coverage; lerna exec -- rimraf lib dist",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "commit": "git-cz",
    "build": "lerna run --parallel build",
    "generate:todos": "leasot -x --reporter markdown 'packages/*/src/**.js'",
    "build:todos": "npm run generate:todos > TODOS.md",
    "lint": "jest --projects jest.eslint.config.js jest.flow.config.js",
    "lint:js": "jest --config jest.eslint.config.js",
    "test": "cross-env NODE_ENV=development jest --config jest.test.config.js",
    "test:package": "cross-env NODE_ENV=development ./scripts/test-package",
    "pretest:integration": "./scripts/install-npm-packages-for-integration-tests",
    "test:integration": "cross-env NODE_ENV=development jest --config integration-tests/jest.test.config.js",
    "format": "npm run format:js & npm run format:md",
    "format:js": "prettier --write '{packages,integration-tests,types}/**/*.js'",
    "format:md": "prettier --parser markdown --write '**/*.md'",
    "test:coverage": "npm run build && npm test -- --no-watchman --coverage",
    "test:ci": "npm run test -- --ci --no-watchman --maxWorkers=10",
    "test:coverage:ci": "npm run test:ci -- --coverage && codecov",
    "release": "cross-env NODE_ENV=cli npm run build && lerna publish --registry=https://registry.npmjs.org/ && npm run docs:publish",
    "docs:clean": "rimraf _book",
    "docs:prepare": "gitbook install",
    "docs:build": "npm run docs:prepare && gitbook build && cp logo/apple-touch-icon.png _book/gitbook/images/apple-touch-icon-precomposed-152.png && cp logo/favicon.ico _book/gitbook/images",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:publish": "npm run docs:clean && npm run docs:build && ./scripts/publish-docs",
    "flow": "eslint packages",
    "package-readme-entry": "./scripts/package-readme-entry.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "6.2.0",
    "@commitlint/config-conventional": "6.1.3",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.6",
    "babel-jest": "22.4.3",
    "babel-plugin-array-includes": "2.0.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-object-entries": "1.0.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-0": "6.24.1",
    "check-node-version": "3.2.0",
    "codecov": "3.0.4",
    "commitizen": "2.10.1",
    "common-tags": "1.8.0",
    "cross-env": "5.2.0",
    "cz-lerna-changelog": "1.2.1",
    "debug": "3.1.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-formatter-pretty": "1.3.0",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jest": "21.17.0",
    "eslint-plugin-jsx-a11y": "6.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.10.0",
    "flow-bin": "0.74.0",
    "gitbook-cli": "2.3.2",
    "gitbook-plugin-anchorjs": "1.1.1",
    "gitbook-plugin-edit-link": "2.0.2",
    "gitbook-plugin-ga": "1.0.1",
    "gitbook-plugin-github": "2.0.0",
    "gitbook-plugin-prism": "2.3.0",
    "husky": "0.14.3",
    "jest": "23.3.0",
    "jest-runner-eslint": "emmenko/jest-runner-eslint#nm-fix-rules-cli-option-built",
    "jest-runner-flowtype": "0.0.5",
    "jest-silent-reporter": "0.0.4",
    "leasot": "6.3.0",
    "lerna": "2.11.0",
    "lint-staged": "7.0.4",
    "npm-check-updates": "2.14.1",
    "prettier": "1.11.1",
    "resolve": "1.7.1",
    "rimraf": "2.6.2",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-commonjs": "8.4.1",
    "rollup-plugin-filesize": "1.5.0",
    "rollup-plugin-flow": "1.1.1",
    "rollup-plugin-includepaths": "0.2.2",
    "rollup-plugin-json": "2.3.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-uglify": "2.0.1",
    "rollup-watch": "4.3.1",
    "streamtest": "1.2.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
