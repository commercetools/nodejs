{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  },
  "scripts": {
    "postinstall": "check-node-version --package && lerna bootstrap && npm run build",
    "check-updates": "./scripts/check-updates",
    "clean": "rm -rf coverage; lerna exec -- rimraf lib dist",
    "build": "lerna exec -- babel src --out-dir lib",
    "dist": "lerna run dist",
    "lint": "flow check && ./scripts/lint packages",
    "test": "npm run build && lerna exec -- jest",
    "test:package": "npm run build && ./scripts/test-package",
    "it": "npm run it:install && npm run it:run",
    "it:run": "jest --config integration-tests/config.json",
    "it:install": "npm run build && ./scripts/install-npm-packages-for-integration-tests",
    "coverage": "npm run build && jest --no-watchman --coverage",
    "coverage:ci": "jest --no-watchman --coverage && codecov",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform",
    "docs:clean": "rimraf _book",
    "docs:prepare": "gitbook install",
    "docs:build": "npm run docs:prepare && gitbook build && cp logo/apple-touch-icon.png _book/gitbook/images/apple-touch-icon-precomposed-152.png && cp logo/favicon.ico _book/gitbook/images",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:publish": "npm run docs:clean && npm run docs:build && ./scripts/publish-docs",
    "commitmsg": "validate-commit-msg",
    "precommit": "./scripts/lint-staged-files"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.21.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "18.0.0",
    "babel-loader": "6.2.10",
    "babel-plugin-module-resolver": "2.4.0",
    "babel-plugin-transform-export-extensions": "6.8.0",
    "babel-plugin-transform-flow-strip-types": "6.21.0",
    "babel-plugin-transform-object-rest-spread": "6.20.2",
    "babel-preset-es2015": "6.18.0",
    "check-node-version": "1.1.2",
    "codecov": "1.0.1",
    "commitizen": "2.9.5",
    "cross-env": "3.1.4",
    "cz-lerna-changelog": "1.0.0",
    "eslint": "3.12.2",
    "eslint-config-airbnb": "13.0.0",
    "eslint-config-commercetools": "5.0.0",
    "eslint-formatter-pretty": "1.1.0",
    "eslint-import-resolver-babel-module": "2.2.1",
    "eslint-plugin-flowtype": "2.29.2",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.8.0",
    "flow-bin": "0.37.4",
    "gitbook-cli": "2.3.0",
    "husky": "0.12.0",
    "jest": "18.1.0",
    "lerna": "2.0.0-beta.30",
    "lerna-semantic-release": "8.0.2",
    "npm-check-updates": "~2.8.8",
    "npm-run-all": "4.0.1",
    "rimraf": "2.5.4",
    "validate-commit-msg": "2.8.2",
    "webpack": "1.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "eslintConfig": {
    "extends": "commercetools",
    "plugins": [
      "flowtype"
    ],
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "rules": {
      "flowtype/define-flow-type": 1,
      "flowtype/require-parameter-type": 1,
      "flowtype/require-return-type": [
        1,
        "always",
        {
          "annotateUndefined": "never"
        }
      ],
      "flowtype/semi": 0,
      "flowtype/space-after-type-colon": [
        1,
        "always"
      ],
      "flowtype/space-before-type-colon": [
        1,
        "never"
      ],
      "flowtype/type-id-match": 0,
      "flowtype/use-flow-type": 1,
      "flowtype/valid-syntax": 1,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/src/*.js"
          ]
        }
      ]
    },
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      },
      "import/resolver": {
        "babel-module": {}
      }
    }
  },
  "jest": {
    "globals": {
      "process.env": {
        "NODE_ENV": "test"
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/integration-tests/",
      "/packages/.*/node_modules",
      "/packages/.*/dist",
      "/packages/.*/lib"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "eslint-plugin-jsx-a11y"
    ]
  }
}
